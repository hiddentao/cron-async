{
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}